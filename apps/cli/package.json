{
  "name": "do-easy-i18n",
  "version": "0.0.1",
  "keywords": [
    "i18n",
    "cli",
    "translation",
    "internationalization",
    "localization",
    "translation",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/do-easy/do-easy-i18n",
    "directory": "apps/cli"
  },
  "author": "Diego Lincoln <diego.lincoln@hotmail.com>",
  "license": "MIT",
  "bin": {
    "do-easy-i18n": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "lint": "eslint . --ext .ts --config eslint.config.ts",
    "lint:fix": "eslint . --ext .ts --fix --config eslint.config.ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.5",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.27.0",
    "vitest": "^3.1.1",
    "commander": "^13.1.0",
    "picocolors": "^1.1.1",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
