{
  "name": "do-easy-i18n",
  "displayName": "Do Easy I18n - Internationalization Manager",
  "description": "ðŸš€ Complete i18n solution with inline translations, AI-powered DeepL integration, and TypeScript support. Visualize, edit, and translate your app messages directly in VS Code.",
  "version": "0.1.6",
  "publisher": "do-easy",
  "license": "MIT",
  "author": {
    "name": "Do Easy Team",
    "email": "diego@mutualtecnologia.com.br"
  },
  "engines": {
    "vscode": "^1.5.0"
  },
  "preview": false,
  "qna": "https://github.com/do-easy/i18n/discussions",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "multilingual",
    "typescript",
    "javascript",
    "deepl",
    "ai-translation",
    "inline-translations",
    "translation-management",
    "language-switching",
    "translation-visualization"
  ],
  "categories": [
    "Other",
    "Language Packs",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "homepage": "https://github.com/do-easy/i18n",
  "repository": {
    "type": "git",
    "url": "https://github.com/do-easy/i18n",
    "directory": "apps/extension"
  },
  "bugs": {
    "url": "https://github.com/do-easy/i18n/issues"
  },
  "icon": "logo-tiny.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "do-easy-i18n.selectLanguage",
        "title": "Switch Display Language",
        "category": "Do Easy I18n"
      },
      {
        "command": "do-easy-i18n.editTranslation",
        "title": "Edit Translation Key",
        "category": "Do Easy I18n"
      },
      {
        "command": "do-easy-i18n.addMissingTranslation",
        "title": "Add Missing Translation (DeepL)",
        "category": "Do Easy I18n"
      },
      {
        "command": "do-easy-i18n.deleteTranslation",
        "title": "Delete Translation Key",
        "category": "Do Easy I18n"
      },
      {
        "command": "do-easy-i18n.extractTranslation",
        "title": "Extract Text to Translation Key",
        "category": "Do Easy I18n"
      },
      {
        "command": "do-easy-i18n.reloadSettings",
        "title": "Reload Settings",
        "category": "Do Easy I18n"
      }
    ],
    "configuration": {
      "title": "Do Easy I18n",
      "properties": {
        "do-easy-i18n.showInlineTranslations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline translation decorations in the editor"
        },
        "do-easy-i18n.defaultDisplayLanguage": {
          "type": "string",
          "default": "en",
          "description": "Default language for inline translation display"
        },
        "do-easy-i18n.decorationDelay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before updating decorations after text changes"
        },
        "do-easy-i18n.deepL.apiKey": {
          "type": "string",
          "description": "Your DeepL API key for automatic translations",
          "default": ""
        },
        "do-easy-i18n.deepL.host": {
          "type": "string",
          "description": "Your DeepL API host",
          "default": "https://api-free.deepl.com"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@do-easy-i18n/config": "workspace:*",
    "@do-easy-i18n/translation-utils": "workspace:*",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "human-id": "^4.1.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
