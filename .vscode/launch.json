// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension/do-easy-i18n"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/do-easy-i18n/dist/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "sourceMapRenames": true,
      "sourceMapPathOverrides": {
        "webpack:*": "${workspaceFolder}/apps/vscode-extension/do-easy-i18n/src/extension.ts"
      }
    }
  ]
}
